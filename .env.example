# Port for the application (defaults to 8000)
PORT=8000

# Authentication password for the application (defaults to 'oingoboingobongobongo')
AUTH_PASSWORD=your_secure_password_here

# OpenRouter API configuration
# Required for AI model access
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter model to use (defaults to 'openrouter/auto')
OPENROUTER_MODEL=openrouter/auto

# System environment variables (usually auto-configured)
PATH=/usr/local/bin:/usr/bin:/bin
NODE_PATH=/usr/local/lib/node_modules