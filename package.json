{
  "name": "claude-code-ui",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "PORT=3002 tsx watch backend/src/index.ts",
    "dev:frontend": "vite --config frontend/vite.config.ts --host --port 3000",
    "swagger": "tsx backend/src/swagger.ts",
    "prebuild": "npm run swagger",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "tsc -p frontend/tsconfig.json && vite build --config frontend/vite.config.ts",
    "start": "node backend/dist/index.js",
    "redeploy:prod": "node start-server.js",
    "preview": "vite preview --config frontend/vite.config.ts",
    "lint": "git diff --name-only --cached HEAD | grep -E '\\.(js|jsx|ts|tsx)$' | xargs -r eslint",
    "lint:fix": "git diff --name-only --cached HEAD | grep -E '\\.(js|jsx|ts|tsx)$' | xargs -r eslint --fix",
    "lint:all": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:all:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "git diff --name-only HEAD | xargs -r npx prettier --write --ignore-unknown && git diff --name-only --cached HEAD | xargs -r npx prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.32",
    "@openrouter/sdk": "^0.5.1",
    "@types/multer": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.0",
    "lucide-react": "^0.563.0",
    "multer": "^2.0.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.0",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "swagger-autogen": "^2.23.7",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.4.0"
  }
}
